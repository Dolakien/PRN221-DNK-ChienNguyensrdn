@{
       var username = Context.Session.GetString("LoggedInAccount");
       Account user = null;
            if (username != null)
            {
                user = JsonConvert.DeserializeObject<Account>(username);
            }
}

  <body style="background-color: #f7f7f7; width: 100vw">
    <div
      style="height: 64px; background-color: white"
      class="d-flex align-items-center"
    >
      <img
        src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTuNlrvrFMLORKsLtoNNG6J0ulGeOgOBuzcNw&s"
        alt=""
        width="40"
        height="40"
        class="rounded-circle mx-4"
      />
      <h3> Welcome @user?.UserName</h3>
      <a href="@Url.Action("logout", "Account")" class="btn btn-danger ms-auto" style="margin-right: 20px">
        Logout
      </a>
    </div>
    <div class="text-center" style="width: 99vw">
      <div class="row">
        <div class="col-2 d-flex justify-content-center">
          <div
            class="rounded"
            style="
              width: 256px;
              height: 472px;
              background-color: white;
              margin-top: 15px;
              margin-left: 10px;
            "
          >
            <button
              type="button"
              class="btnha btn btn-outline-primary"
              style="width: 200px; margin-top: 10px; border: none"
            >
              <div class="d-flex align-items-center">
                <i class="fa-solid fa-house" style="margin-right: 20px"></i>
                <span>Dashboard</span>
              </div>
            </button>
            <a
              type="button"
              class="btnha btn btn-outline-primary"
              style="width: 200px; margin-top: 5px; border: none"
              href="@Url.Action("Dashboard", "Admin")"
            >
              <div class="d-flex align-items-center">
                <i class="fa-solid fa-user" style="margin-right: 23px"></i>
                <span>User</span>
              </div>
            </a>
            <a
              type="button"
              class="btnha btn btn-outline-primary"
              style="width: 200px; margin-top: 5px; border: none"
              href="@Url.Action("Products", "Admin")"
            >
              <div class="d-flex align-items-center">
                <i class="fa-solid fa-briefcase" style="margin-right: 20px"></i>
                <span>Product</span>
              </div>
            </a>
            <a
              type="button"
              class="btnha btn btn-outline-primary"
              style="width: 200px; margin-top: 5px; border: none"
              href="@Url.Action("Categories", "Admin")"
            >
              <div class="d-flex align-items-center">
                <i
                  class="fa-solid fa-layer-group"
                  style="margin-right: 18px"
                ></i>
                <span>Category</span>
              </div>
            </a>
            <a
              type="button"
              class="btnha btn btn-outline-primary"
              style="width: 200px; margin-top: 5px; border: none"
              href="@Url.Action("Orders", "Admin")"
            >
              <div class="d-flex align-items-center">
                <i
                  class="fa-solid fa-file-invoice"
                  style="margin-right: 23px"
                ></i>
                <span>Order</span>
              </div>
            </a>
             <a
              type="button"
              class="btnha btn btn-outline-primary"
              style="width: 200px; margin-top: 5px; border: none"
              href="@Url.Action("Articles", "Admin")"
            >
              <div class="d-flex align-items-center">
                <i
                  class="fa-solid fa-file-invoice"
                  style="margin-right: 23px"
                ></i>
                <span>Article</span>
              </div>
            </a>
             <a
              type="button"
              class="btnha btn btn-outline-primary"
              style="width: 200px; margin-top: 5px; border: none"
              href="@Url.Action("Vouchers", "Admin")"
            >
              <div class="d-flex align-items-center">
                <i
                  class="fa-solid fa-file-invoice"
                  style="margin-right: 23px"
                ></i>
                <span>Voucher</span>
              </div>
            </a>
          </div>
        </div>
        <!-- ========== col2 ========== -->
        <div class="col-8">
          <div
            class="rounded"
            style="
              background-color: white;
              max-height: 800px;
              height: 800px;
              margin-top: 15px;
              overflow: auto;
            "
          >
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Id</th>
                  <th scope="col">UserName</th>
                  <th scope="col">Password</th>
                  <th scope="col">Email</th>
                  <th scope="col">Role</th>
                  <th scope="col">IsDelete</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                  @foreach (var account in Model)
                 {
                <tr>
                    @{var role = account.Role.RoleName == "ADMIN"? "USER": "ADMIN";
                      var status = !account.Status;
                      var isAdmin = account.Role.RoleName == "ADMIN"? true : false;}
                    <form asp-controller="Account" asp-action="update" method="post">
                  <td scope="row">@account.Id</td>
                  <input type="hidden" name="id" value="@account.Id" />
                  <td><input class="form-control" type="text" name="userName" value="@account.UserName" /></td>
                  <td><input class="form-control" type="text" name="password" value="@account.Password" /></td>
                  <td><input class="form-control" type="email" name="email" value="@account.Email" /></td>
                  <td><select class="form-select" name="roleName" aria-label="Default select example">
                        <option value="@account.Role.RoleName" selected>@account.Role.RoleName</option>
                        <option value="@role">@role</option>
                      </select>
                  </td>
                  <td><select class="form-select" name="status" aria-label="Default select example">
                        <option value="@account.Status" selected>@account.Status</option>
                        <option value="@status">@status</option>
                      </select></td>
                  <td>
                    @if(!isAdmin){
                        <button class="btn btn-success" type="submit" disabled="@isAdmin">
                            Edit
                        </button>
                        <a class="btn btn-danger" href="@Url.Action("delete","Account", new {id = account.Id})">Delete</a>
                    }else {
                    }
                  </td>
                  </form>
                </tr>
                  }
              </tbody>
            </table>
          </div>
        </div>
        <!-- ========== col3 ========== -->
        <div class="col-2 d-flex justify-content-center">
          <div
            class="rounded"
            style="
              width: 256px;
              height: 472px;
              background-color: white;
              margin-top: 15px;
              margin-left: 10px;
            "
          >
            <button
              style="margin-top: 20px; cursor: pointer !important"
              type="button"
              class="btn btn-success"
              data-bs-toggle="modal"
              data-bs-target="#exampleModal"
            >
              <div class="d-flex align-items-center">
                <i class="fa-solid fa-plus" style="margin-right: 20px"></i>
                <span>Add New User</span>
              </div>
            </button>
          </div>
        </div>
      </div>
    </div>
  </body>

  <!-- ========== modal ========== -->

  <div
    class="modal fade"
    id="exampleModal"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  > 
   <form asp-controller="Account" asp-action="create" method="post">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Create User</h1>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>

        <div class="modal-body">
          <div class="form-floating mb-3">
            <input
              type="text"
              class="form-control"
              id="usermame"
              name="username"
              required
            />
            <label style="font-weight: bold" for="userName"
              >User Name <span style="color: red">*</span></label
            >
          </div>
          <div class="form-floating mb-3">
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
            />
            <label style="font-weight: bold" for="email"
              >Email <span style="color: red">*</span></label
            >
          </div>
          <div class="form-floating mb-3">
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              required
            />
            <label style="font-weight: bold" for="password"
              >Password <span style="color: red">*</span></label
            >
          </div>
          <div class="form-floating mb-3">
            <input
              type="text"
              class="form-control"
              id="rolename"
              name="rolename"
            />
            <label style="font-weight: bold" for="rolename"
              >Role Name <span style="color: red">*</span></label
            >
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-bs-dismiss="modal">
            Cancel
          </button>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </div>
      </form>
    </div>
  </div>

 <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
</html>
