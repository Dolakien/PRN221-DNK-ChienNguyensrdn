@{
    ViewData["Title"] = "Admin";
    @using HealthyMomAndBaby
    @using HealthyMomAndBaby.Models
    @using HealthyMomAndBaby.Entity
    @using Newtonsoft.Json;
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
}
@model IEnumerable<Account>

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>UserManagement</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS v5.2.1 -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
      integrity="sha512-LlfymZV3HX1knxgWwpx0If2P7e2ve3kUN8JS7ohKoAoyN0J4UZm1alALOO5F2sT6A6/WLOa/ItlU9NCwAlC0Fw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
   <link rel="stylesheet" href="~/admin.css" />
  </head>
<style>

    .btnha:active {
    background-color: #eaf2fd !important; /* Light blue color */
    color: #2f80ed !important;
}

.btnha:hover {
    background-color: #eaf2fd !important; /* Light blue color */
    color: #2f80ed;
}

.btnha {
    color: #8e8e93;
    font-weight: bold;
}

.edit {
    cursor: pointer !important;
    color: #2f80ed;
}

.delete {
    cursor: pointer;
    color: red;
}

