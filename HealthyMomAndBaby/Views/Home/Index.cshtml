@{
    ViewData["Title"] = "Home";
    @using HealthyMomAndBaby;
    @using HealthyMomAndBaby.Models
    @using HealthyMomAndBaby.Entity
    var loggedInAccount = ViewData["LoggedInAccountId"] as HealthyMomAndBaby.Entity.Account;
}
@model IEnumerable<Product>
<!DOCTYPE html>
<bo lang="en">
    <head>
        <title>Title</title>
        <!-- Required meta tags -->
        <meta charset="utf-8" />
        <meta name="viewport"
              content="width=device-width, initial-scale=1, shrink-to-fit=no" />

        <!-- Bootstrap CSS v5.2.1 -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
              rel="stylesheet"
              integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
              crossorigin="anonymous" />
    </head>

    <body style="background-color: #f7f7f7; width: 100vw; overflow-x: hidden;">
        <div style="height: 64px; background-color: white">

            <div class="">
                <div class="row">
                    <div class="col-1">
                    </div>
                    <div class="col-1">
                    </div>
                    <div class="col-1 d-flex justify-content-end align-items-center " style="height: 64px;">
                        <a class="btn" style="margin-left: 20px; margin-right: 20px; border: none">
                            Home
                        </a>
                    </div>
                    <div class="col-1 d-flex justify-content-end align-items-center " style="height: 64px;">
                        <a class="btn" style="margin-left: 20px; margin-right: 20px; border: none">
                            History
                        </a>
                    </div>
                    <div class="col-1 d-flex justify-content-end align-items-center " style="height: 64px;">
                        <a class="btn" style="margin-left: 20px; margin-right: 20px; border: none">
                            Blog
                        </a>
                    </div>
                    
                    <div class="col-1">
                    </div>
                    <div class="col-1">
                    </div>
                    <div class="col-1">
                    </div>
                    <div class="col-4 d-flex justify-content-end align-items-center " style="height: 64px;">
                       
                        @if (loggedInAccount != null)
                        {
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTuNlrvrFMLORKsLtoNNG6J0ulGeOgOBuzcNw&s"
                                 alt=""
                                 width="40"
                                 height="40"
                                 class="rounded-circle mx-4" />
                            <h3 class="mx-4">Trần Thanh Sơn</h3>
                            <div>
                                <a href="@Url.Action("Cart", "Order")"><i class="fa-solid fa-cart-shopping" style="font-size: 30px;"></i></a>
                            </div>
                            <a href="@Url.Action("logout", "Account")" class="btn btn-danger" style="margin-left: 20px; margin-right: 20px;">
                                Logout
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-success" style="margin-left: 20px; margin-right: 20px;" href="@Url.Action("", "Account")">
                                Login
                            </a>
                            <a class="btn btn-primary" style="margin-left: 20px; margin-right: 20px;" href="@Url.Action("Signup", "Account")">
                                SignUp
                            </a>
                        }
                       
                    </div>

                </div>
            </div>
        </div>


        </div>
        <!-- hình động-->
        <div id="carouselExampleAutoplaying" class="carousel slide container" data-bs-ride="carousel">
            <div class="carousel-inner" style="margin-left:58px">
                <div class="carousel-item active">
                    <img src="https://cdn1.concung.com/img/adds/2024/06/1719213418-HOME(2).png" class="d-block" width="1132" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://cdn1.concung.com/img/adds/2024/06/1718680985-Concung-banner2_Web980x320(1).png" class="d-block" width="1132" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://cdn1.concung.com/img/adds/2024/04/1713495643-HOME.png" class="d-block" width="1132" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" style="height: 380px;" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" style="height: 380px;" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>

            <!-- Filtter bar-->
            <div class="container d-flex align-items-center" style="height: 64px; background-color: white; margin-top: 20px; border-radius: 25px; width: 1132px; margin-left: 56px">
                <div class="container text-center">
                    <div class="row">
                        <div class="col-3 d-flex align-items-center">
                            <i class="fa-solid fa-magnifying-glass" style="margin-right: 20px;"></i>
                            <input type="text" class="form-control" id="exampleFormControlInput1">
                        </div>
                        <div class="col d-flex align-items-center">
                            <span style="margin-right: 10px;">From: </span>
                            <select class="form-select" aria-label="Default select example">
                                <option selected>Select price</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                            <span style="margin-left: 10px; margin-right: 10px;">To: </span>
                            <select class="form-select" aria-label="Default select example">
                                <option selected>Select price</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                        <div class="col d-flex align-items-center">
                            <span style="margin-right: 10px;">Category:</span>
                            <select class="form-select" aria-label="Default select example">
                                <option selected>Open this select menu</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- body-->
        <div class="container text-center">
            <div class="row" style="margin-left: 50px;">
                @foreach (var product in Model)
                {
                    <div class="col-2" style="margin-top: 20px; margin-left: 10px; margin-right: 10px; height: 330px; width: 210px; background-color: white; border-radius: 25px;">
                        <div>
                            <img style="margin-bottom: 10px;
          margin-top: 10px;
          border-radius: 21px;
          max-width: 175px;
          max-height: 175px;"
                            src="@product.Image" alt="" width="175" height="175">
                        </div>
                        <div style="line-height: 18px; font-size: 14px;">@product.ProductName</div>
                        <div style="font-weight: bold; font-size: 18px; color: red;">@product.Price đ</div>
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("getById","Product", new {id = product.Id})"><i class="fa-solid fa-circle-info" style="font-size: 30px; color: #0d99ff;"></i></a>
                            <a href="@Url.Action("AddToCart","Order", new {id = product.Id, quantity = 1, Page = "Home"})"><i class="fa-solid fa-cart-shopping" style="font-size: 30px; color: #009600;"></i></a>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Footer-->
        <div style="height: 200px; background-color: #0d99ff; margin-top: 20px;">
        </div>
    </body>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    </html>
