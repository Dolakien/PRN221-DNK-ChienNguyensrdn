@{
    ViewData["Title"] = "Cart";
    @using HealthyMomAndBaby;
    @using HealthyMomAndBaby.Models
    @using HealthyMomAndBaby.Entity
    @using HealthyMomAndBaby.Models.Request
    @using Newtonsoft.Json
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
    var carts = ViewData["Cart"] as HashSet<CartRequest> ?? [];
   var sum = 0.0;
   var discount = Context.Session.GetString("Discount");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
          crossorigin="anonymous" />
</head>
@{
      string accountJson = Context.Session?.GetString("LoggedInAccount");
      Account loggedInAccount = null;
            if (accountJson != null)
            {
               loggedInAccount = JsonConvert.DeserializeObject<Account>(accountJson);

                // Bây giờ bạn có thể sử dụng đối tượng loggedInAccount trong action này
            }
  }

  <body style="background-color: #f7f7f7; width: 100vw; overflow-x: hidden;">
        <div style="height: 64px; background-color: white">

            <div class="">
                <div class="row">
                    <div class="col-1">
                    </div>
                    <div class="col-1">
                    </div>
                    <div class="col-1 d-flex justify-content-end align-items-center " style="height: 64px;">
                        <a href="@Url.Action("Index", "Home")" class="btn" style="margin-left: 20px; margin-right: 20px; border: none">
                            Home
                        </a>

                    </div>
                    <div class="col-1 d-flex justify-content-end align-items-center " style="height: 64px;">
                        @if (loggedInAccount != null)
                        {
                            <a href="@Url.Action("getByUserId","Order", new {userId = loggedInAccount.Id})" class="btn" style="margin-left: 20px; margin-right: 20px; border: none">
                                History
                            </a>
                        }
                    </div>
                    <div class="col-1 d-flex justify-content-end align-items-center " style="height: 64px;">
                        <a href="@Url.Action("blog", "Article")" class="btn" style="margin-left: 20px; margin-right: 20px; border: none">
                            Blog
                        </a>
                    </div>
                    
                    <div class="col-1">
                    </div>
                    <div class="col-1">
                    </div>
                    <div class="col-1">
                    </div>
                    <div class="col-4 d-flex justify-content-end align-items-center " style="height: 64px;">
                       
                        @if (loggedInAccount != null)
                        {
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTuNlrvrFMLORKsLtoNNG6J0ulGeOgOBuzcNw&s"
                                 alt=""
                                 width="40"
                                 height="40"
                                 class="rounded-circle mx-4" />
                            <h3 class="mx-4">Trần Thanh Sơn</h3>
                            <div>
                                <a href="@Url.Action("Cart", "Order")"><i class="fa-solid fa-cart-shopping" style="font-size: 30px;"></i></a>
                            </div>
                            <a href="@Url.Action("logout", "Account")" class="btn btn-danger" style="margin-left: 20px; margin-right: 20px;">
                                Logout
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-success" style="margin-left: 20px; margin-right: 20px;" href="@Url.Action("", "Account")">
                                Login
                            </a>
                            <a class="btn btn-primary" style="margin-left: 20px; margin-right: 20px;" href="@Url.Action("Signup", "Account")">
                                SignUp
                            </a>
                        }
                       
                    </div>

                </div>
            </div>
        </div>
        </div>
    <div class="" style="width: 99vw">
        <div class="row">
            <div class="col-9">
                <div class="rounded"
                     style="
              height: 80vh;
              background-color: white;
              margin-top: 30px;
              margin-left: 20px;
            ">
                    <div style="padding-top: 20px; padding-left: 20px">
                        <h2>Cart</h2>
                    </div>
                    <hr />
                   
                    <!-- Cart body -->
                    <div class="text-center"
                         style="padding-left: 80px; padding-right: 80px">
                          @foreach( CartRequest cart in carts)
                            {
                                sum = sum + cart.TotoalPrice;
                            <div class="row">
                           
                          
                                <!-- Cart c1 -->
                                <div class="col-2">
                                    <img src="@cart.Image"
                                         alt="@cart.ProductName"
                                         width="150px"
                                         height="150px" />
                                </div>
                                <!-- Cart c2 -->
                                <div class="col d-flex align-items-center">
                                    <div>
                                        <div>@cart.Category</div>
                                        <h3>@cart.ProductName</h3>
                                    </div>
                                </div>
                                
                                <div class="col d-flex justify-content-center align-items-center">
                                    <h2>@cart.TotoalPrice VNĐ</h2>
                                </div>
                                <!-- Cart c3 -->
                                <div class="col d-flex align-items-center">
                                    <div class="text-center">
                                        <a href="@Url.Action("Increase","Order", new {id = cart.ProductId})" class="btn btn-outline-primary"
                                                style="border: none">
                                            +
                                        </a>
                                        <h3>@cart.Quantity</h3>
                                        <a href="@Url.Action("Decrease","Order", new {id = cart.ProductId})" class="btn btn-outline-primary"
                                                style="border: none">
                                            -
                                        </a>
                                    </div>
                                </div>
                                <!-- Cart c4 -->
                                <div class="col d-flex align-items-center">
                                    <a class="btn btn-danger" href="@Url.Action("deleteCartItem","Order", new {id = cart.ProductId})">
                                        <i class="fa-solid fa-trash delete"></i>
                                    </a>
                                </div>
    
                            
                        </div>
                        <hr />
                                                }
                    </div>
                </div>
            </div>
            <div class="col-3">
                <div class="rounded"
                     style="height: 80vh; background-color: white; margin-top: 30px">
                    <div style="padding-top: 20px; padding-left: 20px">
                        <h2>Summary</h2>
                    </div>
                    <hr />
                    <div style="padding-top: 20px; padding-left: 50px; padding-right: 50px">
                        <div class="d-flex justify-content-between">
                            <div style="font-weight: bold; font-size: large">
                                Amount
                            </div>
                            <div>@sum VND</div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div style="font-weight: bold; font-size: large">Shipping</div>
                            <div>Ship code</div>
                            </div>
                            <hr />
                            @{
                                if(discount != null){
                                     sum= sum * (1.0-Double.Parse(discount));
                                }
                               }
                        <div class="d-flex justify-content-between">
                            <div style="font-weight: bold; font-size: large">
                                Total Price
                            </div>
                            <div>@sum VND</div>
                        </div>
                        
                        @if(sum != 0){
                            <div class="d-flex justify-content-between" style="margin-bottom: 5px">
                            <form asp-controller="Order" asp-action="AddCode" method="post">
                            <input style="font-weight: bold; font-size: large;" name="code"/>
                            <button type="submit" class="btn btn-success">Add</button>
                            </form>
                            </div>
                            <button class="btn btn-primary" type="button" style="width: 18.5vw" data-bs-toggle="modal"
                                data-bs-target="#exampleModal">
                            <div style="font-weight: bold; font-size: large">Check out</div>
                        </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<!-- Modal-->
<form asp-controller="Order" asp-action="CheckOut" method="post">
    <div class="modal fade"
         id="exampleModal"
         tabindex="-1"
         aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">
                        Check out
                    </h1>
                    <button type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-floating mb-3">
                        <input type="text"
                               class="form-control"
                               id="FullName"
                               name="FullName"
                               required />
                        <label style="font-weight: bold" >Name<span style="color: red">*</span></label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text"
                               class="form-control"
                               id="ShippAddres"
                               name="ShippAddres"
                               required />
                        <label style="font-weight: bold" >Ship Address<span style="color: red">*</span></label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text"
                               class="form-control"
                               id="PhoneNumber"
                               name="PhoneNumber"
                               required />
                        <label style="font-weight: bold" >Phone Number<span style="color: red">*</span></label>
                    </div>
                    <input type="hidden"
                           class="form-control"
                           id="TotalPrice"
                           value="@sum"
                           name="TotalPrice"
                           required />
                    <div class="d-flex justify-content-end gap-4">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">
                            Cancel
                        </button>
                        <button type="submit" class="btn btn-primary">CheckOut</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
</html>
